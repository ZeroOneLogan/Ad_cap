{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@idle-tycoon/sim-core": [
        "../../packages/sim-core/src/index"
      ],
      "@idle-tycoon/sim-core/*": [
        "../../packages/sim-core/src/*"
      ],
      "@idle-tycoon/ui-kit": [
        "../../packages/ui-kit/src/index"
      ],
      "@idle-tycoon/ui-kit/*": [
        "../../packages/ui-kit/src/*"
      ]
    },
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "module": "ESNext",
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "incremental": true,
    "types": [
      "vitest/globals",
      "@types/node"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
